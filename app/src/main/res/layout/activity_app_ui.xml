<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AppUI">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for a location"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_below="@id/ll1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hotel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/img_3"
                android:layout_marginRight="8dp">
            </ImageView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotels"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:textColor="#2B3499"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/attraction"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/img_5">
            </ImageView>

            <TextView
                android:id="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attractions"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:textColor="#2B3499"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/resto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/img_4">
            </ImageView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Restaurants"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:textColor="#2B3499"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pop"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@id/menu"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"

        >
      <TextView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="Popular"
          android:textStyle="bold"
          android:textSize="30sp"
          android:textColor="#00416A"

          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop"


        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/pop"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"

                >

                <ImageView
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/img_6" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableEnd="@drawable/baseline_not_listed_location_24"
                    android:text="CHEFCHAOUEN"
                    android:textStyle="bold"


                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="20dp"


            android:layout_toRightOf="@id/card1"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/img_7" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:drawableEnd="@drawable/baseline_not_listed_location_24"
                    android:text="SIDI IFNI"
                    android:textStyle="bold"


                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/es"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/pop"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            android:layout_toRightOf="@id/card2"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/img_8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_not_listed_location_24"
                    android:text="ESSAOUIRA"
                    android:textStyle="bold"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/lay1"

        android:layout_marginBottom="-15dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/mar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/card1"


            android:layout_marginLeft="20dp"

            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/img_9" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_not_listed_location_24"
                    android:text="MARAKKECH"
                    android:textStyle="bold"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fes"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"


            android:layout_marginTop="20dp"

            android:layout="@id/card2"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/img_10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_not_listed_location_24"
                    android:text="FES"
                    android:textStyle="bold"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dakhla"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/es"


            android:layout_marginLeft="20dp"

            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/img_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_not_listed_location_24"
                    android:text="Dakhla"
                    android:textStyle="bold"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/top_background" />

    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover the world

             with "

        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DestiGo "

        android:textColor="#00416A"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="90dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="675dp">
        <ImageView
            android:id="@+id/home1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_13"
            android:layout_marginTop="8dp"
            ></ImageView>
        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_17"
            android:layout_marginTop="8dp"
            ></ImageView>
        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_15"
            android:layout_marginTop="8dp"
            ></ImageView>
        <ImageView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_16"
            android:layout_marginTop="8dp"
            ></ImageView>

        </LinearLayout>

</RelativeLayout>