<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Religious_places"
    android:background="@drawable/backgrn1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Religious Places In Morocco"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30dp"
            android:layout_margin="20dp"

            android:textStyle="bold"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="The Hassan II Mosque"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_toLeftOf="@+id/image1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="The Hassan II Mosque (Arabic: مسجد الحسن الثاني, French: Grande Mosquée Hassan II) is a mosque in Casablanca, Morocco. It is the largest functioning mosque in Africa and is the 14th largest in the world. Its minaret is the world's second tallest minaret at 210 metres (689 ft)."
                />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_below="@+id/text1"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-3dp"
                android:layout_marginRight="-1dp"
                android:onClick="temple"
                android:src="@drawable/jam"
                android:contentDescription="Enter How Much Cookies You Want"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Casablanca Cathedral"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_toLeftOf="@+id/image2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Casablanca Cathedral (Arabic: كاتدرائية الدار البيضاء, French: Cathédrale de Casablanca), or Church of the Sacred Heart (Arabic: كنيسة القلب المقدس, French: Église du Sacré-Cœur), is a former Roman Catholic church located in Casablanca, Morocco."
                />

            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image2"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text2"
                android:src="@drawable/cath"
                android:onClick="ganga"
                android:contentDescription="Enter How Much Cookies You Want"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Jewish Synagogues "
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/text3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_toLeftOf="@+id/image3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Casablanca is home to the largest Jewish population of Morocco, and the Temple Beth-El is definitely the centerpiece of this Jewish community. With its impressive glass windows, it is one of the city's most famous historical treasures."
                />
            <ImageView
                android:layout_width="150dp"
                android:id="@+id/image3"
                android:layout_alignParentRight="true"
                android:layout_height="140dp"
                android:layout_below="@+id/text3"
                android:src="@drawable/jewich"
                android:onClick="jeta"
                android:contentDescription="Enter How Much Cookies You Want"
                />
        </RelativeLayout>





    </LinearLayout>
</ScrollView>